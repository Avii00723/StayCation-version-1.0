<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bimg123"
    tools:context=".FeedbackActivity">

    <Button
        android:id="@+id/reg"
        android:layout_width="302dp"
        android:layout_height="51dp"
        android:layout_marginTop="452dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#ECAE31"
        android:fontFamily="@font/nunitobold"
        android:text="Submit Feedback"
        android:textColor="#F8F1F1"
        android:textSize="20dp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="752dp"
        android:fontFamily="@font/nunitoregular"
        android:text="Version 1.1"
        android:textAlignment="center"
        android:textColor="#656F77"
        android:textFontWeight="600"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/body"
        android:layout_width="373dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="Write feedback"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#060707"
        android:textFontWeight="400"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="380dp"
        android:layout_height="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="375dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/nunitoregular"
        android:gravity="center"
        android:text="Feedback"
        android:textAlignment="center"
        android:textColor="#191D21"
        android:textFontWeight="800"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>